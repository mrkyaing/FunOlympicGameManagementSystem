@model IEnumerable<UserEntity>
@{
    Layout = "Admin/_AdminLayout";
}
<div class="wrapper">
        @if (@TempData["Info"] != null)
        {
            <b>@TempData["Info"]</b>
        }
        <table id="UserTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Country</th>
                    <th scope="col">DOB</th>
                    <th scope="col">Email Verification Status</th>
                    <th scope="col">Address</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr scope="row">
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.Gender</td>
                        <td>@item.Country</td>
                        <td>@item.DOB.ToString("dd-MM-yyyy")</td>
                        <td>
                            @if (item.IsEmailVerification) {
                                <span style="color:green">Activated user</span>
                            }
                            else {
                                <span style="color:red">Non activated user</span>
                            }
                        </td>
                        <td>@item.Address</td>
                        <td>
                        <a data-toggle="modal" href="/user/delete?id=@item.Id" onclick="return confirm('Are you sure to delete this record.?')" style='margin-left:5px' class="btn btn-danger" role="button">Delete</a>
                    </td>
                    </tr>
                }
            </tbody>
        </table>
</div>